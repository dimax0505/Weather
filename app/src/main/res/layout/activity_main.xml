<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/comment_for_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment_for_input"
            android:layout_centerHorizontal="true"
           />
    <EditText
            android:id="@+id/name_of_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_for_input"
            android:hint="@string/input_here"
            android:inputType="text"
    />

    <Button
            android:id="@+id/batton_Ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_of_city"
            android:layout_centerHorizontal="true"
            android:text="@string/ok"
    />


</RelativeLayout>